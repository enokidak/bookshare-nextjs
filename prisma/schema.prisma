// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  ownedBooks    Book[]      @relation("BookOwner")
  borrowedBooks Borrowing[] @relation("Borrower")

  @@map("users")
}

model Book {
  id          String   @id @default(cuid())
  title       String
  author      String
  isbn        String?
  description String?
  condition   String   @default("good") // good, fair, poor
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  ownerId    String
  owner      User        @relation("BookOwner", fields: [ownerId], references: [id])
  borrowings Borrowing[]

  @@map("books")
}

model Borrowing {
  id         String    @id @default(cuid())
  borrowedAt DateTime  @default(now())
  returnedAt DateTime?
  dueDate    DateTime
  isReturned Boolean   @default(false)

  // Relations
  bookId     String
  book       Book @relation(fields: [bookId], references: [id])
  borrowerId String
  borrower   User @relation("Borrower", fields: [borrowerId], references: [id])

  @@map("borrowings")
}
